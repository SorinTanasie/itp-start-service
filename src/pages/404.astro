---
import CustomButton from "@/components/CustomButton.astro";
import ImageMod from "@/components/ImageMod.astro";
import Base from "@/layouts/Base.astro";
---

<Base title="Page Not Found">
  <section class="section relative text-center" data-aos="fade-up-sm">
    <div class="container">
      <div
        class="relative overflow-hidden bg-[#181c39] rounded-xl"
        data-aos="fade-up-sm"
        data-aos-delay="100"
      >
        <ImageMod
          src="/images/404.png"
          alt="404"
          width={0}
          height={0}
          class="absolute w-[80%] top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"
          data-aos="fade-up-sm"
          data-aos-delay="200"
        />
        <ImageMod
          src="/images/error.png"
          alt="error"
          width={0}
          height={0}
          class="absolute w-[27%] top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"
          data-aos="fade-up-sm"
          data-aos-delay="300"
        />
        <ImageMod
          src="/images/noise.png"
          alt="noise"
          width={0}
          height={0}
          class="w-full h-full object-cover opacity-20"
          data-aos="fade-up-sm"
          data-aos-delay="400"
        />
        <div
          class="absolute bg-[#b3fc6a] aspect-[2.5/1] rounded-full bottom-[-347px] blur-[117px] h-[360px] left-[170px] rotate-[21deg] w-[71%]"
          data-aos="fade-up-sm"
          data-aos-delay="500"
        >
        </div>

        <div
          class="absolute right-[-160px] top-[-450px] w-[1250px] h-[488px] bg-[#5868fb] opacity-60 rounded-full blur-[172px] rotate-[13deg]"
          data-aos="fade-up-sm"
          data-aos-delay="600"
        >
        </div>
      </div>
    </div>

    <div data-aos="fade-up-sm" data-aos-delay="500">
      <div class="container md:-translate-y-40 md:-mb-40 z-10">
        <div class="row justify-center">
          <div
            class="col-12 lg:col-10 bg-body rounded-xl p-10 lg:p-20 shadow"
            data-aos="fade-up-sm"
            data-aos-delay="800"
          >
            <h3 class="max-xl:h4 mb-4">Ups! Ceva nu a mers bine</h3>
            <p class="text-balance text-xl mb-6">
              Ne pare rau, pagina pe care ati cautat-o nu exista pe site-ul
              nostru! Poate mergeti la pagina noastra principala sau incercati
              sa folositi o cautare?
            </p>
            <CustomButton
              label="Go Back to home"
              link="/"
              data-aos="fade-up-sm"
              data-aos-delay="900"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
