---
import { markdownify } from "@/lib/utils/textConverter";
import { Icon } from "astro-icon/components";
import { IoMdCheckmark } from "react-icons/io";
import ImageMod from "../ImageMod.astro";

const { feature } = Astro.props;
---

<section class="section" data-aos="fade-up-sm" data-aos-delay="100">
  <div class="container">
    <div class="row max-xl:gy-4 justify-between items-center">
      <div
        class="col-12 lg:col-6 max-lg:order-2"
        data-aos="fade-up-sm"
        data-aos-delay="200"
      >
        <h2
          set:html={markdownify(feature.title)}
          class="mb-6 max-xl:h3 max-xl:text-balance lg:leading-[80px]"
        />
        <p
          set:html={markdownify(feature.content)}
          class="mb-20 text-dark/70 text-balance"
        />
        <ul>
          {
            feature.points.map((p: any, index: number) => (
              <div
                class="flex items-center mb-4"
                data-aos="fade-up-sm"
                data-aos-delay={300 + index * 100}
              >
                <IoMdCheckmark className="text-tertiary mr-4 text-2xl" />
                <li set:html={markdownify(p)} class="text-xl last:mb-0" />
              </div>
            ))
          }
        </ul>
      </div>
      <div class="col-12 lg:col-6">
        <div class="bg-theme-light/60 w-fit mx-auto rounded-xl">
          <ImageMod
            src={feature.image}
            alt="feature"
            width={600}
            height={0}
            class="p-6"
          />
        </div>
      </div>
    </div>
  </div>
</section>

