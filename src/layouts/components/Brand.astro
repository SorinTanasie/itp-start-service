---
import { markdownify } from "@/lib/utils/textConverter";
import { getEntry } from "astro:content";
import ImageMod from "./ImageMod.astro";

const brand = await getEntry("sections", "brand");

const { title, logos } = brand.data;
---

<section class="section" data-aos="fade-up-sm" data-aos-delay="100">
  <div class="container">
    <div class="row gy-3 md:gy-5 justify-center">
      <div class="col-12" data-aos="fade-up-sm" data-aos-delay="200">
        <p
          set:html={markdownify(title)}
          class="font-medium text-balance text-center max-lg:text-center max-lg:mb-7"
        />
      </div>

      <div class="col-12" data-aos="fade-up-sm" data-aos-delay="300">
        <div
          class="flex gap-5 items-center flex-wrap justify-center lg:justify-between w-full"
        >
          {
            logos.map((logo: string, index: number) => (
              <ImageMod
                src={logo}
                alt="company logo"
                width={0}
                height={38}
                class="w-auto h-[32px]"
                data-aos="fade-up-sm"
                data-aos-delay={400 + index * 100}
              />
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
